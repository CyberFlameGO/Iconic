
platform :ios, '11.0'
use_frameworks!

# useful for Playground interoperability
abstract_target 'Playground'

def iconic
    pod 'Iconic', :path => '../Iconic.podspec'
end

target 'iOS' do
    platform :ios, '12.0'
    iconic
end

target 'tvOS' do
    platform :tvos, '9.0'
    iconic
end

target 'watchOS' do
    platform :watchos, '2.0'
    iconic
end

target 'watchOS Extension' do
    platform :watchos, '2.0'
    iconic
end

target 'Tests' do
    pod 'FBSnapshotTestCase/Core'
    iconic
end
